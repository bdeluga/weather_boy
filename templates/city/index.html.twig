{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
    <h1>City index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lat</th>
                <th>Lon</th>
                <th>Name</th>
                <th>Iso</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.lat }}</td>
                <td>{{ city.lon }}</td>
                <td>{{ city.name }}</td>
                <td>{{ city.iso }}</td>
                <td>
                    <a href="{{ path('app_city_show', {'id': city.id}) }}">show</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_city_new') }}">Create new</a>
{% endblock %}
